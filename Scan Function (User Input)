// Example 1:  
// Output: You are (x number) years old 

int main() 
{ 
    int age; 
    printf("Input your age: "); 
    scanf("%d", &age);   // & is an indicator of user input. It is not used for a string of characters when scanning for a double, use %lf, not %f 
    printf("You are %d years old", age); 
    
    return 0; 
} 

 
// Example 2: 
// Output: Your name is (x name) 

int main()  
{ 
    char name[20];   // The [20] limits the user input to 20 characters 
    printf("Enter your name: "); 
    scanf("%s", name); 
    printf("Your name is %s", name); 
    
    return 0; 
} 
